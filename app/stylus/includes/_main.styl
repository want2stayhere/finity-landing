.top-main
	background #f7f8fa
	padding-top 97px
	text-align center
	box-shadow inset 0px -98px 114px 0px rgba(29,41,63,0.04);
	h1 
		margin 0 0 10px 0
	.btn
		margin-bottom 18px
	.page-pre__add
		margin 0 auto 38px
		font-size 21px 
		line-height 1.4

.top-main__add
	font-size 13px
	color #8c97ac

.top-main__wrap
	overflow hidden
	padding 110px 0 0 0
	display flex
	justify-content center
    

.top-main__img
	background #fff
	border-top-left-radius 10px
	border-top-right-radius 10px
	box-shadow 0px -17px 84px 0px rgba(29, 41, 63, 0.12)
	position relative
	img
		display block
		max-width 100%
		position relative
		border-top-left-radius 10px
		border-top-right-radius 10px
		z-index 2
	&:before
		content ''
		display block
		width 300px
		height 300px
		background #ffd166
		position absolute
		left -79px
		bottom -93px
		border-radius 45px
		transform rotate(67deg)
		animation rotate 7s infinite ease-in;
	&:after	
		content ''
		display block
		width 285px
		height 285px
		background #37def5
		position absolute
		right -98px
		top -90px
		border-radius 50%
		animation: scale_min 4s infinite ease-in
    	
.solution
	padding 47px 0 117px
	border-bottom 1px solid #eceff4
	text-align center
	h2
		margin-bottom 8px
	.page-pre
