.el-animate
	opacity 0
	transform translateY(30px)
	&.el-show
		opacity 1
		transition all 1.5s ease
		transform translateY(0)
	&:nth-child(2)
		transition-delay 0.3s
	&:nth-child(3)
		transition-delay 0.6s
	&:nth-child(4)
		transition-delay 0.9s
	&:nth-child(5)
		transition-delay 1.2s
	&:nth-child(6)
		transition-delay 1.5s
	&:nth-child(7)
		transition-delay 1.8s
	&:nth-child(8)
		transition-delay 2.1s
	&:nth-child(9)
		transition-delay 2.4s
	&:nth-child(10)
		transition-delay 2.7s


@keyframes scale
	0%
		transform:scale(1)
	50%
		transform:scale(1.2)
	100%
		transform:scale(1)

@keyframes scale_min
	0%
		transform:scale(1)
	50%
		transform:scale(1.1)
	100%
		transform:scale(1)

@keyframes rotate
	0%
		transform: rotate(58deg);
	50%
		transform: rotate(77deg);
	100%
		transform: rotate(58deg);

